# GCP Deployment Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Cloud SQL PostgreSQL)
DATABASE_URL="postgresql://permitpro_user:your-secure-password@/permitpro?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME"
DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DB_NAME=permitpro
DB_USER=permitpro_user
DB_PASSWORD=your-secure-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://your-project-id.appspot.com/api
VITE_API_URL=https://your-project-id.appspot.com/api

# Cloud Storage Configuration
STORAGE_BUCKET=permitpro-files-PROJECT_ID

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-api-key

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
